{
  "ontology_version": "1.0",
  "knowledge_domain": "https://knowledge.nvo987.us",
  "knowledge_version": "v1",

  "description": "Conceptual ontology describing the structural knowledge model of the NVO987 Knowledge Base.",

  "core_classes": [
    {
      "id": "Concept",
      "description": "Abstract theoretical construct or structural principle."
    },
    {
      "id": "Claim",
      "description": "Derived propositional statement grounded in one or more Concepts."
    },
    {
      "id": "Source",
      "description": "External or canonical reference supporting Concepts or Claims."
    },
    {
      "id": "Vector",
      "description": "Structured semantic axis embedding attached to a corpus entity."
    }
  ],

  "relations": [
    {
      "id": "derived_from",
      "domain": "Claim",
      "range": "Concept",
      "cardinality": "many_to_one"
    },
    {
      "id": "supported_by",
      "domain": ["Concept", "Claim"],
      "range": "Source",
      "cardinality": "many_to_many"
    },
    {
      "id": "vectorizes",
      "domain": "Vector",
      "range": ["Concept", "Claim", "Source"],
      "cardinality": "one_to_one"
    }
  ],

  "semantic_principles": {
    "atomic_knowledge_units": true,
    "no_implicit_relations": true,
    "machine_primary_interpretation": true,
    "human_narrative_secondary": true,
    "explicit_version_reference_only": true
  },

  "epistemic_model": {
    "interpretive_framework": "Curated structural knowledge modeling",
    "truth_status": "theoretical_and_documented",
    "reinterpretation_expected": true
  },

  "temporal_design": {
    "snapshot_based": true,
    "frozen_namespace": true,
    "future_agent_reinterpretation": true,
    "intended_horizon": "2040+"
  },

  "created": "2026-02-17"
}
